<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test">
    <!--#{}表示一个占位符-->
    <select id="findUserById" parameterType="int" resultType="com.today.bean.User">
        select *
        from USER
        where id = #{id}
    </select>
    <!--${}表示一个拼接符-->
    <select id="findUserByName" parameterType="String" resultType="com.today.bean.User">
        select *
        from USER
        where username like '%${value}%'
    </select>
    <select id="insertUser" parameterType="com.today.bean.User" resultType="int">
       insert into user(username,password,email,create_time) values(#{username},#{password},#{email},#{create_time})
    </select>
    <select id="updateUser" parameterType="com.today.bean.User" resultType="int">
       update  user set username=#{username}, password=#{password}, email=#{email}, create_time=#{create_time} where id=#{id}
    </select>
</mapper>